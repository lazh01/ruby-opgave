<div class="m-auto w-min bg-white shadow overflow-hidden sm:rounded-lg">
<h4 class="text-4xl font-bold "> Create User </h4>
<div>
<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %> <br>
    <%= f.label :email %>
    <%= f.text_field :email %> <br>
    <%= f.label :password %>
    <%= f.password_field :password %> <br>
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
    Create
    </button>
<% end %>
</div>
</div>