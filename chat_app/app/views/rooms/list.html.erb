<div>
  <h1 class="font-bold text-4xl">Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
  <form action="/rooms/new">
    <input type="submit" value="new room" />
  </form>
</button>

</div>
