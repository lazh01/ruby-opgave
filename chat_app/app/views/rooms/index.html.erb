<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class ="sm:grid sm:grid-cols-10 sm:gap-4 sm:px-6">
    <div class ="sm:col-span-2">
      <h1 class="font-bold text-4xl">Rooms</h1>
      <%= turbo_stream_from "rooms" %>
      <div id="rooms">
        <%= render @rooms %>
      </div>
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        <form action="/rooms/new">
          <input type="submit" value="new room" />
        </form>
      </button>
    </div>
    <div class="sm:col-span-8 bg-sky-100 h-screen">
      <% if @current_room %>
        <h4 class="text-center"> <%= @current_room.title %> </h4>
        <h1 class="text-center"> <%= @id %> </h1>
        <div class="overflow-auto h-5/6">
          <%= turbo_stream_from @current_room %>
          <div id="messages">
            <%= render partial: @messages %>
          </div>
        </div>
        <div class=" grid bg-green-100 h-1/6">
        
        <%= render partial: 'messages/new_message_form' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
